<!-- goes through each post in the posts array from homeroutes.js -->
{{#each posts as |post| }}
<a href="/api/posts/{{id}}">
    <div class="readpost-cards">
        <div class="readpost-header">
            <div class="readpost-title">
            {{post.post_title}}</p></div>
            <p>Created by {{post.user_username}} on {{format_date post.post_date}}</p></div>
            <div class="readpost-text"><p>{{post.post_content}}</p></div>
    </div></a>
{{/each}}
    {{!-- {{#if logged_in}} --}}
    <a href="/createpost"><button class="createpost-btn">+ New Post</button></a>
    <a href="/logout">Logout</a>
    {{!-- {{else}} --}}
    <a href="/login">Login</a>
    {{!-- {{/if}} --}}

    <script src="css/js/createpost.js"></script>
