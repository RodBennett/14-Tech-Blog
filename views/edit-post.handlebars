<div class="createpost-card" id="editpost-card">
  <div class="createpost-header">
    <h2 class="createnewpost">Edit Post</h2>
  </div>
  <form id="edit-post-form" class="card-body">
    <input type="hidden" name="post-id" value="{{post.id}}" />

    <label class="form-label" for="post-title">Title</label>
    <input type="text" name="post-title" value="{{post.post_title}}" class="createpost-title" />

    <label class="form-label" for="post-body">Content</label>
    <textarea name="post-body" class="createpost-text">{{post.post_content}}</textarea>

    <button type="submit" class="createpost-btn" id="edit-btn">Edit Post</button>
    <button type="button" id="delete-btn" class="createpost-btn">Delete Post</button>
  </form>
</div>

<script src="/js/edit.js"></script>